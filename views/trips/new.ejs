  <body>
    <h1>Add a new trip</h1>
    <div class="noteField">
      <form action="/trips" method="POST">
        Name: <input type="text" name="name" placeholder="Where did you go?" /><br/>
        Date: <input type="text" name="date" placeholder="Month Year" /><br/>
